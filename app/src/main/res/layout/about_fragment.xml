<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="warhammer.security.drawer_fragments.AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/lock_flat2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_info" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="5dp">
           <TableRow android:gravity="center" android:layout_marginBottom="10dp">
               <ImageView
                   android:src="@drawable/icon_twitter"
                   android:layout_width="50dp"
                   android:layout_height="50dp" />
               <TextView
                   android:id="@+id/tv_twitter"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="ZaTribune"
                   android:layout_margin="10dp"
                   android:focusable="true" />
           </TableRow>
            <TableRow android:gravity="center" android:layout_marginBottom="10dp">
                <ImageView
                    android:src="@drawable/icon_github"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ZaTribune"
                    android:layout_margin="10dp"/>
            </TableRow>
            <TableRow android:gravity="center">
                <ImageView
                    android:src="@drawable/icon_linkedin"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ZaTribune"
                    android:layout_margin="10dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>
